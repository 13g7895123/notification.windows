{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist/preload",
        "rootDir": "./src/preload",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": false,
        "sourceMap": true
    },
    "include": [
        "src/preload/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}